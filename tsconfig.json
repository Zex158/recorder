{
  "compilerOptions": {
    "target": "es2018",
    "module": "es2015",
    "jsx": "preserve",
    "lib": [
      "dom",
      "es2018"
    ],
    "baseUrl": "./",
    "paths": {
      "@page/*": [
        "src/pages/*"
      ],
      "@component/*": [
        "src/components/*"
      ],
      "@container/*": [
        "src/containers/*"
      ],
      "@layout/*": [
        "src/layouts/*"
      ],
      "@locale/*": [
        "src/locales/*"
      ],
      "@route/*": [
        "src/routes/*"
      ],
      "@service/*": [
        "src/service/*"
      ],
      "@type/*": [
        "src/types/*"
      ]
    },
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src"
  ]
}